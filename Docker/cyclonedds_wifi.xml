<!-- Cyclone DDS configuration for Tiago Pro WiFi -->
<CycloneDDS>
  <Domain>
    <General>
      <AllowMulticast>false</AllowMulticast>
      <Interfaces>
        <!-- Your PC wifi interface name -->
        <NetworkInterface name="wlp47s0" priority="2" presence_required="true"/>
        <NetworkInterface name="lo" priority="0"/>
      </Interfaces>
    </General>

    <Discovery>
      <ParticipantIndex>auto</ParticipantIndex>
      <MaxAutoParticipantIndex>500</MaxAutoParticipantIndex>
      <Peers>
        <Peer Address="localhost"/>
        <Peer Address="10.68.0.1"/> <!-- robot IP over Tiago Pro WiFi -->
      </Peers>
    </Discovery>
  </Domain>
</CycloneDDS>