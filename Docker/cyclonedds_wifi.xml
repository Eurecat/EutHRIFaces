<!-- Cyclone DDS configuration for Tiago Pro WiFi -->
<CycloneDDS>
  <Domain>
    <General>
      <AllowMulticast>false</AllowMulticast>
      <Interfaces>
        <!-- Your PC wifi interface name -->
<NetworkInterface name="lo" priority="0" presence_required="true"/>
      </Interfaces>
    </General>

    <Discovery>
      <ParticipantIndex>auto</ParticipantIndex>
      <MaxAutoParticipantIndex>500</MaxAutoParticipantIndex>
      <Peers>
        <Peer Address="localhost"/>
      </Peers>
    </Discovery>
  </Domain>
</CycloneDDS>